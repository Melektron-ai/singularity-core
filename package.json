{
  "name": "singularity-core-monorepo",
  "private": true,
  "packageManager": "npm@10.5.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "build:web": "turbo run build --filter=web"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.5.4"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}